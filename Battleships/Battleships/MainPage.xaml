<Page
    x:Class="Battleships.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battleships"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="LightBlue">
        <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Battleships Game" VerticalAlignment="Top" Margin="0,100,0,0" FontSize="30%"
                   TextAlignment="Center" Width="795" FontWeight="ExtraBold"/>
        <Button Content="Start" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Height="100" Width="400" Tapped="StartGame" FontSize="30%"/>
        <Button Content="Exit" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" Height="100" Width="400" Tapped="Exit" FontSize="45"/>

    </Grid>
</Page>
